{
  "name": "bun-badges",
  "version": "0.0.1",
  "description": "Open Badges server implementation using Bun and Hono",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "tsc": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "test": "bun test --preload ./tests/setup.ts",
    "test:watch": "bun test --preload ./tests/setup.ts --watch",
    "test:all": "bash ./test-all.sh",
    "test:file": "bash ./test-file.sh",
    "test:unit": "bash ./test-unit.sh",
    "test:unit:old": "NODE_ENV=test INTEGRATION_TEST=false bun test 'src/__tests__/' 'tests/unit/' 'src/tests/' 'src/utils/**/__tests__/' --exclude 'src/**/*.integration.test.ts' --exclude '**/integration/**' --exclude 'src/services/__tests__/integration/' --exclude 'src/routes/__tests__/integration/' --exclude 'src/services/__tests__/credential.integration.test.ts' --preload ./tests/setup.ts",
    "test:unit:file": "NODE_ENV=test INTEGRATION_TEST=false bun test --preload ./tests/setup.ts",
    "test:integration": "NODE_ENV=test INTEGRATION_TEST=true DATABASE_URL=postgres://postgres:postgres@localhost:5434/bun_badges_test bun test --preload ./tests/setup.ts tests/integration 'src/**/*.integration.test.ts' 'src/services/__tests__/integration/' 'src/routes/__tests__/integration/'",
    "test:integration:full": "bash ./integration-test.sh",
    "test:integration:file": "bash ./test-integration.sh",
    "test:docker": "bash ./test-integration.sh",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bun run lint",
      "bun run format"
    ]
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@larswander/png-text": "^1.0.0",
    "@noble/curves": "^1.4.0",
    "@noble/ed25519": "^2.2.3",
    "@scure/base": "^1.2.4",
    "@transmute/did-key-ed25519": "^0.3.0-unstable.10",
    "@transmute/json-web-signature": "^0.7.0-unstable.60",
    "base64url": "^3.0.1",
    "bnid": "^3.0.0",
    "canvas": "^3.1.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.0",
    "fast-bitset": "^2.0.0",
    "hono": "^4.0.5",
    "jose": "^5.2.2",
    "jsonld": "^8.3.2",
    "multiformats": "^13.1.0",
    "n3": "^1.17.2",
    "nanoid": "^5.1.4",
    "pg": "^8.11.3",
    "png-itxt": "^2.0.0",
    "png-metadata": "^1.0.2",
    "postgres": "^3.4.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@hono/swagger-ui": "^0.5.1",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "bun-types": "latest",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "swagger-typescript-api": "^13.0.23",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "author": "",
  "license": "MIT"
}
